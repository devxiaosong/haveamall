/* pages/goodsdetails/goodsdetails.wxss */
@import "../../widget/quantity/quantity.wxss";
@import "../../widget/common/common.wxss";
@import "../../widget/wxParse/wxParse.wxss";

.container {
  display: flex;
  flex-direction: column;
  position: relative;
}

.main_page {
  display: flex;
  align-items: strentch;
  flex-direction: column;
  width: 100%;
  margin-bottom: 120rpx;
}

.main_info {
  display: flex;
  align-items: strentch;
  flex-direction: column;
  background-color: #fff;
}

.head_img {
  width: 100%;
  height: 750rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin: 24rpx 24rpx 24rpx 24rpx;
  line-height: 56rpx;
  letter-spacing: 1rpx;
}

.buylimit_refund_item {
  width: 100%;
  display: flex;
}

.buylimit_refund_left {
  display: flex;
  flex-wrap: wrap;
  width: 72%;
  margin: 10rpx 0rpx 0rpx 24rpx;
  align-items: center;
}

.buylimit_item2 {
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 0rpx 30rpx 24rpx;
  align-items: center;
}

.buylimit_item_img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.buylimit_text {
  font-size: 26rpx;
  color: #18bc40;
}

.usenote {
  margin-top: 20rpx;
  flex: column;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.usenote_title {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #989898;
  line-height: 88rpx;
  border-bottom: 1rpx solid #e6e6e6;
  height: 88rpx;
}

.usenote_content {
  margin: 30rpx 24rpx 30rpx 24rpx;
  margin-right: 24rpx;
  font-size: 26rpx;
  color: #989898;
  min-height: 120rpx;
}

.descriptions {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: strentch;
  padding: 24rpx 24rpx 24rpx 24rpx;
}

.descriptions_item {
}

.descriptions_item_text {
  font-size: 28rpx;
  color: #666;
  line-height: 48rpx;
}

.descriptions_item_img {
  width: 100%;
}

.purchase_tab {
  position: fixed;
  background-color: #fff;
  display: flex;
  bottom: -1rpx;
  width: 100%;
  border-top: solid 1rpx #e6e6e6;
}

.purchase_tab_left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 24rpx;
  flex: auto;
}

.purchase_tab_left_price {
  display: flex;
  overflow: hidden;
  align-items: baseline;
}

.purchase_tab_left_price_symbol {
  color: #f64040;
  font-size: 36rpx;
  margin-right: 8rpx;
}

.purchase_tab_left_price_price {
  font-size: 48rpx;
  color: #f64040;
  line-height: 60rpx;
}

.purchase_tab_left_price_retailprice {
  font-size: 24rpx;
  color: #b2b2b2;
  margin-left: 9rpx;
  text-decoration: line-through;
}

.purchase_tab_left_stock {
  font-size: 24rpx;
  color: #989898;
  line-height: 30rpx;
}

.purchase_tab_right {
  font-size: 36rpx;
  color: #fff;
  width: 300rpx;
  flex: 0 1 300rpx;
  display: flex;
  flex-direction: column;
  align-items: strentch;
}

.purchase_tab_right_purchase {
  background-color: #f64040;
  line-height: 100rpx;
  text-align: center;
}

.purchase_tab_right_coming {
  background-color: #18bc40;
  line-height: 100rpx;
  text-align: center;
}

.purchase_tab_right_soldout {
  background-color: #ccc;
  line-height: 100rpx;
  text-align: center;
}

.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
  height: 550rpx;
  display: flex;
  flex-direction: column;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.row1 {
  height: 120rpx;
  display: flex;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
  align-items: center;
  justify-content: flex-end;
}

.row1 text {
  font-size: 30rpx;
  line-height: 120rpx;
  flex: auto;
}

.row1 image {
  width: 60rpx;
  height: 60rpx;
}

.row2 {
  height: 120rpx;
  display: flex;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
  align-items: center;
}

.row2 text {
  font-size: 28rpx;
  line-height: 120rpx;
  flex: auto;
  color: #989898;
}

.quantity {
  flex: none;
}

.row3 {
  height: 120rpx;
  display: flex;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
  align-items: center;
}

.row3_title {
  font-size: 28rpx;
  line-height: 120rpx;
  flex: auto;
  color: #989898;
}

.row3_price {
  flex: none;
  color: #f64040;
  font-size: 30rpx;
}

.row4 {
  background-color: #f64040;
  color: #fff;
  font-size: 34rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 100rpx;
  width: 100%;
  border-radius: 0;
}

.row4::after {
  border-radius: 0;
}
