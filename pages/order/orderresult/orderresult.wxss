/* pages/my/orderprocess/orderresult/orderresult.wxss */

.container {
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.iv-result {
  width: 100%;
  height: 600rpx;
}

.result-click {
  width: 200rpx;
  height: 160rpx;
  right: 120rpx;
  top: 350rpx;
  position: absolute;
}

.item-bg {
  background-color: #fff;
  box-shadow: 0 0 20rpx 0 #dadada;
  width: 566rpx;
  margin-bottom: 44rpx;
}

.item-head-bg {
  width: 100%;
  display: flex;
}

.item-head-img {
  width: 100%;
  height: 220rpx;
}

.item-head-text-bg {
  position: absolute;
  width: 566rpx;
  display: flex;
  flex-direction: column;
  height: 220rpx;
}

.item-head-title {
  color: #444;
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: bold;
  margin-left: 58rpx;
  margin-right: 58rpx;
  margin-top: 54rpx;
}

.item-head-time-bg {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  margin-left: 58rpx;
  margin-right: 58rpx;
  margin-top: 22rpx;
}

.item-head-time {
  color: #b2b2b2;
  font-size: 22rpx;
  line-height: 30rpx;
}

.item-head-time-img {
  width: 38rpx;
  height: 38rpx;
}

.item-code-bg {
  width: 100%;
  height: 470rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  border-top: 2rpx solid #f8f8f8;
}

.item-code-img {
  width: 268rpx;
  height: 268rpx;
  margin-top: 54rpx;
}

.item-code-text{
  margin-top: 26rpx;
  line-height: 67rpx;
  font-size: 48rpx;
  color: #2e2e2e;
  font-weight: bold;
}